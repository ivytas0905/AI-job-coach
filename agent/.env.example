# ================================
# AI Job Coach - Backend Configuration
# ================================

# --------------------------------
# LLM Configuration (Primary Provider)
# --------------------------------
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# --------------------------------
# Together AI Configuration (Fallback)
# --------------------------------
TOGETHER_API_KEY=your-together-api-key-here
TOGETHER_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# --------------------------------
# Fallback Settings
# --------------------------------
ENABLE_FALLBACK=true
FALLBACK_PROVIDER=together
MAX_RETRIES=2
RETRY_DELAY=1

# --------------------------------
# Application Configuration
# --------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# --------------------------------
# CORS Configuration
# --------------------------------
CORS_ORIGINS=["http://localhost:3000"]

# --------------------------------
# File Processing
# --------------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# --------------------------------
# Database Configuration
# --------------------------------
# SQLite (Development)
DATABASE_URL=sqlite+aiosqlite:///./ai_job_coach.db

# PostgreSQL (Production - Uncomment to use)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_job_coach

DATABASE_ECHO=false

# --------------------------------
# Cache Configuration (Optional)
# --------------------------------
# CACHE_TTL=3600
# CACHE_MAX_SIZE=1000

# --------------------------------
# Vector Store Configuration (Optional)
# --------------------------------
# VECTOR_DIMENSION=1536
# VECTOR_SIMILARITY_THRESHOLD=0.7

# --------------------------------
# Logging Configuration (Optional)
# --------------------------------
# LOG_FILE=logs/app.log
# LOG_FORMAT=json
# LOG_ROTATION=daily
